<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <import type="ru.skillbranch.sbdelivery.R"/>
        <variable
            name="viewModel"
            type="ru.skillbranch.sbdelivery.ui.dish.review.ReviewDialogViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="@string/leave_a_review"
            android:fontFamily="sans-serif"
            android:paddingEnd="16dp"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/grey_close"
            app:iconGravity="textEnd"
            android:background="@android:color/transparent"
            android:paddingEnd="14.5dp"
            android:paddingStart="14.5dp"
            android:text=""
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ib_star5"
            tools:ignore="ContentDescription,RtlSymmetry"
            android:onClick="@{view -> viewModel.onCloseDialogClick()}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:tint="@{viewModel.starCount >= 1 ? @color/orange : @color/grey}"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginStart="51dp"
            android:paddingTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ib_star2"
            android:onClick="@{view -> viewModel.onStarClick(1)}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:backgroundTint="@android:color/transparent"
            android:tint="@{viewModel.starCount >= 2 ? @color/orange : @color/grey}"
            android:paddingTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/ib_star1"
            app:layout_constraintEnd_toStartOf="@+id/ib_star3"
            android:onClick="@{view -> viewModel.onStarClick(2)}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:backgroundTint="@android:color/transparent"
            android:tint="@{viewModel.starCount >= 3 ? @color/orange : @color/grey}"
            android:paddingTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/ib_star2"
            app:layout_constraintEnd_toStartOf="@+id/ib_star4"
            android:onClick="@{view -> viewModel.onStarClick(3)}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:backgroundTint="@android:color/transparent"
            android:paddingTop="17dp"
            android:tint="@{viewModel.starCount >= 4 ? @color/orange : @color/grey}"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/ib_star3"
            app:layout_constraintEnd_toStartOf="@+id/ib_star5"
            android:onClick="@{view -> viewModel.onStarClick(4)}"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:backgroundTint="@android:color/transparent"
            android:tint="@{viewModel.starCount >= 1 ? R.color.orange : R.color.grey}"
            android:paddingTop="17dp"
            android:layout_marginEnd="51dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/ib_star4"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{view -> viewModel.onStarClick(5)}"/>

        <EditText
            android:id="@+id/et_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="@string/input_review"
            android:background="@drawable/rect_review"
            android:gravity="top|left"
            android:fontFamily="sans-serif"
            android:hint="@string/input_review"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:padding="10dp"
            android:scrollbars="none"
            android:textColorHint="@color/grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ib_star1"
            tools:ignore="RtlHardcoded" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mb_send"
            app:cornerRadius="6dp"
            app:backgroundTint="@color/orange_button_color"
            android:text="@string/send"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingTop="12.98dp"
            android:paddingBottom="15.02dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_review"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>