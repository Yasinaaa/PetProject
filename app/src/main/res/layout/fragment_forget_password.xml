<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background_with_icons"
    tools:ignore="MissingConstraints">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            app:title="@string/restore_password"
            app:contentInsetStart="26dp"
            app:titleTextColor="@color/colorPrimary"
            android:elevation="10dp" />

    </com.google.android.material.appbar.AppBarLayout>

<!--    android:text="@string/forget_password_text"
        android:text="@string/input_verification_code"
        android:text="@string/input_new_password"-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_forget_password_text"
        android:text="@string/forget_password_text"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:textAlignment="gravity"
        android:layout_marginTop="168dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/apl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email"
        android:text="@string/email"
        android:textAppearance="@style/TextViewSign"
        android:layout_marginTop="17dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_password_text"
        app:layout_constraintEnd_toStartOf="@+id/tv_email_error"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email_error"
        android:text="@string/wrong_email"
        android:textAppearance="@style/TextViewSignError"
        android:textAlignment="textEnd"
        android:layout_marginTop="133dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@+id/apl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_email" />

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="visible"
        android:id="@+id/tif_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="24dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:id="@+id/tiet_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:visibility="visible"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/mb_send"
        app:cornerRadius="6dp"
        app:backgroundTint="@color/orange_button_color"
        android:text="@string/send"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingTop="12.97dp"
        android:paddingBottom="15.03dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="@+id/tif_email"
        app:layout_constraintTop_toBottomOf="@+id/tif_email"
        app:layout_constraintStart_toStartOf="@+id/tif_email"/>

    <!-- input verification use case -->
    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/tif_verification_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tif_verification_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:id="@+id/tiet_verification_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/tif_verification_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tif_verification_3"
        app:layout_constraintStart_toEndOf="@+id/tif_verification_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_email">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:id="@+id/tiet_verification_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/tif_verification_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/tif_verification_4"
        app:layout_constraintStart_toEndOf="@+id/tif_verification_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_verification_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/tif_verification_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tif_verification_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_verification_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- input new password -->
    <TextView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_repeat_password"
        android:text="@string/repeat_password"
        android:textAppearance="@style/TextViewSign"
        android:layout_marginTop="16dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tif_email"
        app:layout_constraintEnd_toStartOf="@+id/tv_repeat_password_error"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_repeat_password_error"
        android:text="@string/wrong_email"
        android:textAppearance="@style/TextViewSignError"
        android:textAlignment="textEnd"
        android:layout_marginTop="133dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintTop_toBottomOf="@+id/apl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_repeat_password" />

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/tif_repeat_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginTop="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="24dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="6dp"
        app:boxCornerRadiusTopEnd="6dp"
        app:boxCornerRadiusBottomStart="6dp"
        app:boxCornerRadiusBottomEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repeat_password">

        <com.google.android.material.textfield.TextInputEditText
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:id="@+id/tiet_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>