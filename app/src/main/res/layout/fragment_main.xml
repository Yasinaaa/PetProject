<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <com.google.android.material.imageview.ShapeableImageView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:id="@+id/siv_wallpaper"
        android:background="@drawable/wallpaper"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@color/colorRipple"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/siv_sb"
        app:srcCompat="@drawable/ic_sb_delivery"
        app:layout_constraintStart_toStartOf="@+id/siv_wallpaper"
        app:layout_constraintEnd_toEndOf="@+id/siv_wallpaper"
        app:layout_constraintTop_toTopOf="@+id/siv_wallpaper"
        app:layout_constraintBottom_toBottomOf="@+id/siv_wallpaper"
        tools:ignore="ContentDescription" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:visibility="gone"-->
<!--        android:id="@+id/rv"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/siv_wallpaper"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        tools:listitem="@layout/item_main_rv" />-->

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/recommend"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="39dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/siv_wallpaper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_see_all"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:paddingBottom="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/siv_wallpaper"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_items_rec"
        tools:listitem="@layout/item_product_card"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:flow_wrapMode="aligned"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_best_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/best"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="39dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_items_rec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_see_all_best"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_see_all_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:paddingBottom="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_best_title"
        app:layout_constraintTop_toBottomOf="@+id/rv_items_rec"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_items_best"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:flow_wrapMode="aligned"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_best_title"
        tools:listitem="@layout/item_product_card" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_popular_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="39dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_items_best"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_see_all_popular"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_see_all_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:paddingBottom="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_popular_title"
        app:layout_constraintTop_toBottomOf="@+id/rv_items_rec"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_items_popular"
        tools:listitem="@layout/item_product_card"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:flow_wrapMode="aligned"
        app:layout_constraintTop_toBottomOf="@+id/tv_popular_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="20sp"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/main_empty_list"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siv_wallpaper"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/fl_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:id="@+id/siv_wallpaper_shimmer"
                android:background="@color/grey"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@color/colorRipple"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <include
                layout="@layout/item_shimmer_main_rv"/>

            <include
                layout="@layout/item_shimmer_main_rv"/>

            <include
                layout="@layout/item_shimmer_main_rv"/>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>