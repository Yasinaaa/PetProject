<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialFabSmall"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorTextWhite</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/orange</item>
    </style>

    <style name="TextViewSign">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">29dp</item>
    </style>

    <style name="TextViewSignError">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">29dp</item>
    </style>

    <style name="EditTextSign">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">29dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>

    </style>

    <style name="Theme.SBDelivery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>